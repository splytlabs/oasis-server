{
  "name": "oasis-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "dev": "cross-env NODE_ENV=develop nodemon",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "start": "cross-env NODE_ENV=production npm run build && node build/index.js",
    "migration:dev": "cross-env NODE_ENV=develop npm run build && node build/migrator/index.js",
    "migration:prod": "cross-env NODE_ENV=production npm run build && node build/migrator/index.js",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "ethers": "^5.7.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "ts-dedent": "^2.2.0"
  }
}
